<h2 class="mb-4">Dashboard</h2>
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card stats-card bg-primary text-white">
            <div class="card-body">
                <h5 class="card-title">Total de Usuários</h5>
                <h2 class="mb-0"><%= stats.totalUsers %></h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stats-card bg-success text-white">
            <div class="card-body">
                <h5 class="card-title">Total de Logins</h5>
                <h2 class="mb-0"><%= stats.totalLogins %></h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stats-card bg-info text-white">
            <div class="card-body">
                <h5 class="card-title">Logins Hoje</h5>
                <h2 class="mb-0"><%= stats.todayLogins %></h2>
            </div>
        </div>
    </div>
</div>

<div class="table-container mb-4">
    <h4 class="mb-3">Usuários Recentes</h4>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Último Login</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% recentUsers.forEach(user => { %>
                <tr>
                    <td><%= user.email %></td>
                    <td><%= user.lastLogin ? new Date(user.lastLogin).toLocaleString() : 'Nunca' %></td>
                    <td>
                        <% if(user.verified) { %>
                            <span class="badge bg-success">Verificado</span>
                        <% } else { %>
                            <span class="badge bg-warning">Pendente</span>
                        <% } %>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>


<div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h4 class="m-0">Top Acessos</h4>
        <select id="topLimitSelect" class="form-select form-select-sm" style="width:auto;">
            <% [5,10,20,50].forEach(n => { %>
                <option value="<%= n %>" <%= n == topLimit ? 'selected' : '' %>><%= n %></option>
            <% }); %>
        </select>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Logins</th>
                </tr>
            </thead>
            <tbody>
                <% topAccesses.forEach(a => { %>
                <tr>
                    <td><%= a._id %></td>
                    <td><%= a.count %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>

<div class="table-container">
    <h4 class="mb-3">Logs Recentes</h4>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Ação</th>
                    <th>Data/Hora</th>
                    <th>IP</th>
                    <th>País</th>
                    <th>Referer</th>
                </tr>
            </thead>
            <tbody>
                <% recentLogs.forEach(log => { %>
                <tr>
                    <td><%= log.email %></td>
                    <td>
                        <% if(log.action === 'Login sucesso' || log.action === 'verification_success') { %>
                            <span class="badge bg-success">Login Sucesso</span>
                        <% } else if(log.action === 'Login falhou' || log.action === 'verification_failed') { %>
                            <span class="badge bg-danger">Login Falhou</span>
                        <% } else { %>
                            <span class="badge bg-info">Código Enviado</span>
                        <% } %>
                    </td>
                    <td><%= new Date(log.timestamp).toLocaleString() %></td>
                    <td><%= log.ip %></td>
                    <td><%= log.country || 'Desconhecido' %></td>
                    <td><%= log.referer || '' %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const select = document.getElementById("topLimitSelect");
        if (select) {
            select.addEventListener("change", function() {
                const params = new URLSearchParams(window.location.search);
                params.set("topLimit", this.value);
                window.location.search = params.toString();
            });
        }
    });
</script>
